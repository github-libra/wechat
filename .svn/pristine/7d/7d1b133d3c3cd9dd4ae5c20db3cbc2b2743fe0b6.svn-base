body {
	min-width: 400px;
	padding: 20px 0;
	position: relative;
	font:20px "Microsoft YaHei", Verdana, Geneva, sans-serif;
}

body.equipment-list-page{
	background-color: #71C687;
}

body.temperature-heat-page{
	background-color: #FF9640;
}

body.temperature-cool-page{
	background-color: #6CC6E5;
}

body.humidity-page{
	background-color: #00688B;
}

body.statistic-page{
	background-color: #F26B5E;
}

body.config-page{
	background-color: #F2F2F2;
}

.footer {
	margin-bottom: 20px;
	left: 0;
}
.footer .col-xs-3 {
	text-align: center;
}

img.Navi-config-page{
	background: no-repeat url(pic/Navi-sun-grey.png);
	src: none;
}

img.Navi-ac-page{
	background: no-repeat url(pic/Navi-ac-grey.png);
	src: none;
}

img.Navi-chart-page{
	background: no-repeat url(pic/Navi-chart-grey.png);
	src: none;
}

img.Navi-set-page{
	background: no-repeat url(pic/Navi-set-grey.png);
	src: none;
}


h1{
  font-size: 25;
  display: inline-block;
}

.edit-device-btn {
	background: no-repeat url(pic/Deviceedit-grey.png);
}

#addbtn{
	margin-top: 20px;
}

.logoutbtn{

}

.row.underline-row{
	border-bottom: 1px solid #ddd;
	padding:5px;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 90%;
  /* Set the fixed height of the footer here */
  height: 30px;
}

.footer .row img{
	padding-top: 3px;
}

.equipmentDetailRow{
	padding-left: 20px;
}

#equipmentAddbtn{
	position: relative;
	width: 350px; 
	height: 100px;
	left:50%;
	margin-left: -175px;
	margin-top: 50px;
	background-color: transparent;
	border: 1px solid #000000;
	border-radius:8px;/*边框圆角*/
}

#equipmentAddInput{
	background-color: :transparent;
}


.large {
    font-size:30px;
    color:white;
    /*padding:10px 0;*/
}

.medium {
    font-size:20px;
    color:black;
    padding-top:5px;
}

.small {
    font-size:15px;
    color:white;
    padding-top:5px;
}


td {
    text-align:center;
}

hr{
    border-width:1px;
    -webkit-margin-before:0;
    -webkit-margin-after:0;
}

div.equipmentOffColor{
	background-color: #b3b3b3;
}

p{
	margin : 5;
}

div{
	position:relative; 
}

.wrap{ 
	position: relative;
	z-index: 10;
	height:400px; 
	margin:10px; 
	top: 160px;
	background-image: url("pic/Frontpage-backimage.png");
	background-repeat: no-repeat;
	background-attachment: scroll;
	background-position: center 20%;
	
} 

.all-middle{ 
	z-index: 10;
	width:250px; 
	height:200px; 
	top:27%; 
	left:47%; 
	margin:-60px 0 0 -100px; 
	text-align: center;
	position: relative;
}

#mainscreen-digit{
	left: 0;
	font-size: 108px; 
	color: #FFF;
	text-indent: -20px;
	position: relative;
}

.up-temp-btn{
